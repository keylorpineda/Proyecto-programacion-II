<VBox prefHeight="600.0" prefWidth="900.0" spacing="10.0" style="-fx-background-color: #d4c9be;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.MakeReservationWindowController">
    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="80.0" spacing="300.0" style="-fx-background-color: #123458;">
            <children>
                <Button fx:id="btnBack" onAction="#backUserView" styleClass="backButton" text="Volver">
                    <HBox.margin>
                        <Insets left="20.0" />
                    </HBox.margin>
                </Button>
                <Label styleClass="textFieldTitle" text="Hacer ReservaciÃ³n" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <children>
                <DatePicker fx:id="dpDateOption" prefWidth="180" promptText="Seleccione una fecha" />
                <ComboBox fx:id="cbStartTime" prefWidth="120" promptText="Hora Inicio" />
                <ComboBox fx:id="cbEndTime" prefWidth="120" promptText="Hora Final" />
            </children>
            <HBox.margin>
                <Insets bottom="10.0" left="30.0" top="15.0" />
            </HBox.margin>
        </HBox>
        <TabPane fx:id="tpTabChooseSpace" prefHeight="390.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Piso 1">
                    <content>
                        <AnchorPane>
                            <children>
                                <GridPane fx:id="gpFloor1" hgap="6" layoutX="30.0" layoutY="10.0" prefHeight="340.0" prefWidth="820.0" style="-fx-background-color: #eaeaea; -fx-border-radius: 10; -fx-background-radius: 10;" vgap="6" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Piso 2">
                    <content>
                        <AnchorPane>
                            <children>
                                <GridPane fx:id="gpFloor2" hgap="6" layoutX="30.0" layoutY="10.0" prefHeight="340.0" prefWidth="820.0" style="-fx-background-color: #eaeaea; -fx-border-radius: 10; -fx-background-radius: 10;" vgap="6" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Piso 3">
                    <content>
                        <AnchorPane>
                            <children>
                                <GridPane fx:id="gpFloor3" hgap="6" layoutX="30.0" layoutY="10.0" prefHeight="340.0" prefWidth="820.0" style="-fx-background-color: #eaeaea; -fx-border-radius: 10; -fx-background-radius: 10;" vgap="6" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <Button fx:id="btnGoToPay" disable="true" onAction="#goToPayment" styleClass="mainButton" text="Ir a Pagar">
                    <HBox.margin>
                        <Insets right="30.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
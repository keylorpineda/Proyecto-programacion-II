<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #0C0C0C;" stylesheets="@/css/snakeGame.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.SnakeGameController">

    <children>

        <!-- Zona de juego -->
        <Pane fx:id="gamePane" prefHeight="600.0" prefWidth="1003.0" />

        <!-- Puntos -->
        <Label fx:id="lblScore" styleClass="score-label" text="Puntos: 0" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" />

        <!-- Pantalla de inicio -->
        <StackPane fx:id="overlayPane" prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: rgba(0,0,0,0.85);">
            <children>
                <VBox alignment="CENTER" prefHeight="665.0" prefWidth="942.0" spacing="25.0">

                    <!-- Logo con emojis -->
                    <StackPane styleClass="emoji-logo">
                        <Label styleClass="emoji-icon" text="🐍🐍" />
                    </StackPane>

                    <!-- Título -->
                    <Label styleClass="title-label" text="Snake Game" />

                    <!-- Botón -->
                    <Button fx:id="btnStartGame" styleClass="start-button" text="Comenzar Juego" />
                </VBox>
            </children>
        </StackPane>

    </children>
</AnchorPane>
